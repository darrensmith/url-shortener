{
  "name": "url-shortener",
  "version": "0.0.1",
  "description": "Blackrock URL Shortener",
  "main": "server.js",
  "scripts": {
    "test": "nyc mocha **/*.br-test.js",
    "lint": "eslint ."
  },
  "dependencies": {
    "is-blackrock": "^0.2.1"
  },
  "author": {
    "name": "Darren Smith",
    "email": "support@industryswarm.com",
    "url": "https://url-shortener.industryswarm.com/"
  },
  "maintainers": [
    {
      "name": "Darren Smith",
      "email": "contact@darrensmith.com.au"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/darrensmith/url-shortener.git"
  },
  "engines": [ "node" ],
  "bin": { "url-shortener": "./server.js" },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-uuid": "^1.0.6",
    "eslint": "^7.10.0",
    "eslint-config-google": "^0.14.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "sinon": "^9.0.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6
    },
    "rules": {
      "max-len": [
        2,
        120,
        4,
        {
          "ignoreUrls": true
        }
      ],
      "no-console": 0
    }
  },
  "eslintIgnore": [
    "node_modules",
    "!node_modules/is-blackrock"
  ],
  "nyc": {
    "include": [
      "services/**/*.js",
      "node_modules/is-blackrock/**/*.js"
    ],
    "excludeNodeModules": false
  }
}
